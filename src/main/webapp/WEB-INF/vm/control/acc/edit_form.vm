<div class="span12">
	<!-- BEGIN INPUT PORTLET-->
	<div class="portlet box blue">
		<div class="portlet-title">
			<div class="caption"><i class="icon-search"></i>配件基础信息</div>
		</div>
		<div class="portlet-body form" style="display: block;">
			
		<form class="form-horizontal" action="$formActionUrl" method="POST">
			<input type="hidden" name="accessoryId" value="$!{accessory.accessoryId}"> 
			<!--/row-->
			<div class="row-fluid">
				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">配件名称:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="accessoryName" value="$!{accessory.accessoryName}"> 
						</div>
					</div>
				</div>

				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">配件价格:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="accessoryPrice" value="$!{accessory.accessoryPrice}"> 
						</div>
					</div>
				</div>
			</div>
			<div class="row-fluid">
				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">配件图片名:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="fileName" value="$!{accessory.fileName}"> 
						</div>
					</div>
				</div>
				
				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">配件图片路径:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="filePath" value="$!{accessory.filePath}"> 
						</div>
					</div>
				</div>
			</div>
			<!--/row-->
			
			<div class="row-fluid">
				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">选择图片:</label>
						<div class="controls">
							<input type="file" class="m-wrap span12" name="selectFile"> 
						</div>
					</div>
				</div>
				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<div class="controls">
							<input type="button" class="m-wrap span12" name="upFile" value="上传"> 
						</div>
					</div>
				</div>
			</div>
			<!--/row-->
			
			<div class="form-actions">
				<button type="submit" class="btn blue"><i class="icon-ok"></i> 保存</button>
				<button type="button" class="btn" onclick="javascript:window.history.back();">取消</button>
			</div>
		</form>
		</div>
	</div>
	<!-- END INPUT FORM>
</div>