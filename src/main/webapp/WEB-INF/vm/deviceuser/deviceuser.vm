        }); 
    }
	jQuery(document).ready(function() {  
	  // initiate layout and plugins
	   App.init();
	   handleMultiSelect();
	   dataInit(${userId});
	});
	
    function dataInit(userId){  
	    $.post("/deviceuser/queryDeviceUserByuserId",{"userId":1},function(json){  
	        $('#my_multi_select2').multiSelect("select",json.deviceIds);
	    },'json');  
	} 
	
</script>

