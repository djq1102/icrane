<div class="span12">
	<!-- BEGIN INPUT PORTLET-->

	<div class="portlet box blue">

		<div class="portlet-title">

			<div class="caption"><i class="icon-search"></i>设备基础信息</div>

		</div>
		
		<div class="portlet-body form" style="display: block;">
		
		<form class="form-horizontal" action="/device/updateDevice.htm" method="post">
			<input type="hidden" name="deviceId" value="$!{device.deviceId}"> 
			<div class="row-fluid">
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">所属客户:</label>
						<div class="controls">
							<select class="small m-wrap" tabindex="1" name="customerId">
								#foreach($customer in $customers)
									<option value="$!{customer.customerId}" #if($!{device.customerId} == $!{customer.customerId})selected#end>$!{customer.customerName}</option>
								#end	
							</select>
						</div>
					</div>
				</div>

				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">所属现场:</label>
						<div class="controls">
							<select class="small m-wrap" tabindex="1" name="siteId">
								#foreach($site in $sites)
									<option value="$!{site.siteId}" #if($!{device.siteId} == $!{site.siteId})selected#end>
											$!{site.siteName}
									</option>
								#end
							</select>
						</div>
					</div>

				</div>

				<!--/span-->

				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">设备名称:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="deviceName" value="$!{device.deviceName}"> 
						</div>
					</div>
				</div>

				<!--/span-->
			</div>
			<!--/row-->
			<div class="row-fluid">
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">机型名称:</label>
						<div class="controls">
							<select class="small m-wrap" tabindex="1" name="modelId">
								#foreach($plcModel in $plcModels)
									<option value="$!{plcModel.modelId}" #if($!{device.modelId} == $!{plcModel.modelId})selected#end>$!{plcModel.modelName}</option>
								#end	
							</select>
						</div>
					</div>
				</div>

				<!--/span-->

				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">设备IP:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="deviceIp" value="$!{device.deviceIp}"> 
						</div>
					</div>
				</div>

				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">视频用户名:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="userName" value="$!{device.userName}"> 
						</div>
					</div>
				</div>
				<!--/span-->

			</div>
			<!--/row-->
			<div class="row-fluid">
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">视频密码:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="userPwd" value="$!{device.userPwd}"> 
						</div>
					</div>
				</div>
				
				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">序列号:</label>
						<div class="controls">
							<input type="text" class="m-wrap span12" name="serialNumber" value="$!{device.serialNumber}"> 
						</div>
					</div>
				</div>
				<!--/span-->
			</div>
			
			<div class="row-fluid">
				<!--/span-->
				<div class="span4 ">
					<div class="control-group">
						<label class="control-label">位置坐标:</label>
						<div class="controls">
							<input id="location" type="text" name="location" size="128" readonly value="$!{device.location}"> 
						</div>
					</div>
				</div>
				<!--/span-->
			</div>
			
			<div id="map_canvas" align="center" style="width: 100%; height:520px"></div>

			<!--/row-->
			<div class="form-actions">
				<button type="submit" class="btn blue"><i class="icon-ok"></i> 保存</button>
				<button type="button" class="btn" onclick="javascript:window.history.back();">取消</button>
			</div>
		</form>
		</div>
		
	</div>
	<!-- END INPUT FORM>
</div>